pipeline {
    agent any

    tools {
        maven 'Maven 3.9.6'
        jdk 'JDK 17'
    }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/dharshini-devops23/devops-practice.git'
            }
        }

        stage('Build') {
            steps {
                dir('devops-practice') { // Adjust this folder name if needed
                    sh 'mvn clean install'
                }
            }
        }

        stage('SonarQube Analysis') {
            environment {
                SONARQUBE_SCANNER_PARAMS = "-Dsonar.projectKey=devops-practice -Dsonar.projectName=devops-practice"
            }
            steps {
                withSonarQubeEnv('MySonarQube') {
                    dir('devops-practice') {
                        sh 'mvn sonar:sonar'
                    }
                }
            }
        }
    }
}
